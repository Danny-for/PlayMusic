@model PlayMusic.Models.Playlist

@{
    ViewData["Title"] = "Criar Playlist";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4 text-white">Criar Nova Playlist</h2>
        <form asp-action="Criar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="PlaylistNome" class="form-label text-white"></label>
                <input asp-for="PlaylistNome" class="form-control" />
                <span asp-validation-for="PlaylistNome" class="text-danger"></span>
            </div>

            <input type="submit" value="Criar Playlist" class="btn btn-success w-100 p-2" />
            <div class="text-center mt-2">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-white">Voltar para Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

