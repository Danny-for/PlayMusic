@model PlayMusic.Models.Musica

@{
    ViewData["Title"] = "Adicionar Música";
}

<h2 class="text-white">Adicionar Música</h2>

<form asp-action="Adicionar" method="post">
    <input type="hidden" asp-for="PlaylistId" value="@ViewBag.PlaylistId" /> 

    <div class="mb-3">
        <label asp-for="NomeMusica" class="form-label text-white">Nome da Música</label>
        <input asp-for="NomeMusica" class="form-control" />
        <span asp-validation-for="NomeMusica" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ArtistaMusica" class="form-label text-white">Artista</label>
        <input asp-for="ArtistaMusica" class="form-control" />
        <span asp-validation-for="ArtistaMusica" class="text-danger"></span>
    </div>

    <input type="submit" value="Adicionar Música" class="btn btn-success" />
    <a asp-controller="Playlist" asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
