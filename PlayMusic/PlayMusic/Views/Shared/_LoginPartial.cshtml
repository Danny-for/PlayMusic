<!--
    Essa parte do código cria um menu de navegação que muda dependendo do estado de autenticação do usuário.
    Se o usuário estiver logado, vê a opção de logout. Se não estiver, vê as opções de login e registro.    
-->
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Usuario> signInManager;

<ul class="navbar-nav ms-auto">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Registro">Registro</a>
        </li>
    }

</ul>